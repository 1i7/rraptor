<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rraptor.pult"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rraptor.pult.ManualPultActivity"
            android:label="@string/title_activity_manual" android:screenOrientation="sensor" android:parentActivityName="@string/title_activity_rraptor">
        </activity>
        <activity
            android:name="com.rraptor.pult.CalibrateActivity"
            android:label="@string/title_activity_calibrate" android:screenOrientation="sensor" android:parentActivityName="@string/title_activity_rraptor">
        </activity>
        <activity
            android:name="com.rraptor.pult.Plotter2DActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_plotter2_d"
            android:theme="@style/FullscreenTheme" android:screenOrientation="sensor" android:parentActivityName="@string/title_activity_rraptor">
        </activity>
        <activity
            android:name="com.rraptor.pult.RRaptorActivity"
            android:label="@string/title_activity_rraptor" android:screenOrientation="sensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
