<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ManualPultActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/btn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/connect" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/checkedTextView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="X:"
            android:textSize="42sp" />

        <ImageButton
            android:id="@+id/x_backward_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_left"
            android:contentDescription="x backward"
            android:minHeight="100dip"
            android:minWidth="100dip" />

        <ImageButton
            android:id="@+id/x_forward_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_right"
            android:contentDescription="x forward"
            android:minHeight="100dip"
            android:minWidth="100dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/checkedTextView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Y:"
            android:textSize="42sp" />

        <ImageButton
            android:id="@+id/y_backward_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_left"
            android:contentDescription="y backward"
            android:minHeight="100dip"
            android:minWidth="100dip" />

        <ImageButton
            android:id="@+id/y_forward_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_right"
            android:contentDescription="y forward"
            android:minHeight="100dip"
            android:minWidth="100dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/checkedTextView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Z:"
            android:textSize="42sp" />

        <ImageButton
            android:id="@+id/z_backward_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_left"
            android:contentDescription="z backward"
            android:minHeight="100dip"
            android:minWidth="100dip" />

        <ImageButton
            android:id="@+id/z_forward_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_right"
            android:contentDescription="z forward"
            android:minHeight="100dip"
            android:minWidth="100dip" />
    </LinearLayout>

    <Button
        android:id="@+id/command_voice_btn"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="right|bottom"
        android:layout_weight="1"
        android:text="Голос" />

</LinearLayout>