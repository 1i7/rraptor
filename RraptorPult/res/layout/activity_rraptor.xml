<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RRaptorActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/btn_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="@string/connect" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_goto_plotter_2d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_weight="0"
        android:text="@string/rraptor_plotter2d" />
    
    
    <Button
        android:id="@+id/btn_goto_drawing_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_weight="0"
        android:text="@string/rraptor_drawing_progress" />

    <Button
        android:id="@+id/btn_goto_manual_pult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_weight="0"
        android:text="@string/rraptor_manual_pult" />

    <Button
        android:id="@+id/btn_goto_calibrate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_weight="0"
        android:text="@string/rraptor_calibrate" />

    <Button
        android:id="@+id/btn_goto_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_weight="0"
        android:text="@string/rraptor_status" />

    <Button
        android:id="@+id/btn_goto_debug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_weight="0"
        android:text="@string/rraptor_debug" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        android:contentDescription="Dinosaur"
        android:src="@drawable/logo2" />

</LinearLayout>